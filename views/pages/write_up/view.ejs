<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/head'); -%>
    <link rel="stylesheet" type="text/css" href="css/rb.css">
    <link rel="stylesheet" type="text/css" href="css/ratings.css">
</head>
<body>
    <div class="display_page_body">
        <%- include('../../partials/nav_bar'); %>
        <div class="view_ratings">
            <table>
                <tr>
                    <th>Rootbeer</th>
                    <th>Date</th>
                    <th>Content</th>
                    <th></th>
                    <th></th>
                </tr>
                <% for (const wu of write_ups) { %>
                <tr>
                    <td><a href="/rb/<%-ru.rb_id %>"><%- ru.rb_name %></a></td>
                    <td><%- ru.created %></td>
                    <form action="/write_up/<%= ru._id %>/update" method="post">
                        <td> 
                            <textarea rows="7" cols="100" name="write_up", form="write_up" value="<%- wu.write_up %>">/textarea>
                        </td>
                        <td>
                            <button type="submit" value="rating" class="rate_button" required >Update</button>
                        </td>
                    </form>
                    <td><a href="/ratings/<%- rating._id %>/delete">Delete</a></td>
                </tr>
                <% } %>
            </table>
        </div>
        <div class="userLogo">
            <img src="imgs/cc_logo.png"/>
        </div>
    </div>
</body>