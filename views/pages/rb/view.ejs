<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./ll_partials/header') %>
    <link rel="stylesheet" type="text/css" href="../css/view_rb.css">
</head>
<body>
    <div class="display_page_body">
        <%- include('./ll_partials/nav_bar') %>
        <div class="rb_view">
            <div class="rb_view_name">
                <p>#10 - <%= rb.name %></p>
            </div>
            <div class="rb_image">
                <img src="../<%= rb.image %>" />
            </div>
            <div class="rb_ratings">
                <div class="rb_avg_ratings">
                    <table>
                        <tr>
                            <td>Avg Score</td>
                            <td colspan="9">Category Averages</td>
                        </tr>
                        <tr>
                            <td rowspan="2"  id="total"><%= avg.total %></td>
                            <td id="category">Brand</td>
                            <td ><%= avg.branding %></td>
                            <td id="category">After Taste</td>
                            <td><%= avg.after_taste %></td>
                            <td id="category">Aroma</td>
                            <td><%= avg.aroma %></td>
                            <td id="category">Sweet</td>
                            <td><%= avg.sweetness %></td>
                        </tr>
                        <tr>
                            <td id="category">Fizz</td>
                            <td><%= avg.carbonation %></td>
                            <td id="category">Flavor</td>
                            <td><%= avg.flavor %></td>
                            <td id="category">Bite</td>
                            <td><%= avg.bite %></td> 
                            <td id="category">Smooth</td>
                            <td><%= avg.smoothness %></td>
                        </tr>
                    </table>
                </div>
            <div class="update_sections">
                <%- include('./ll_partials/update_rb') %>
                <%- include('./ll_partials/add_rating') %>
            </div>
            <div class="update_rb_links">
                <table>
                    <tr>
                        <td>
                            <a href="#" onclick="slide('add_rating', 'height', 175)">Add Rating</a>
                        </td>
                        <td>
                            <a href="#" onclick="slide('edit_rb', 'height', 175)">Update Rootbeer Info</a>
                        </td>
                    </tr>
                </table>
            </div>
                <div class="rb_all_ratings">
                    <table>
                        <tr>
                            <th>Rater</th>
                            <th>Date</th>
                            <th>Total</th>
                            <th>Brand</th>
                            <th>After Taste</th>
                            <th>Aroma</th>
                            <th>Bite</th>
                            <th>Fizz</th>
                            <th>Flavor</th>
                            <th>Smooth</th>
                            <th>Sweet</th>
                        </tr>
                        <% for (const rating of ratings) {%>
                        <tr>
                            <td><%- rating.user %></td>
                            <td><%- rating.created %></td>
                            <td><%- rating.total %></td>
                            <td><%- rating.branding %></td>
                            <td><%- rating.after_taste %></td>
                            <td><%- rating.aroma %></td>
                            <td><%- rating.bite %></td>
                            <td><%- rating.carbonation %></td>
                            <td><%- rating.flavor %></td>
                            <td><%- rating.smoothness %></td>
                            <td><%- rating.sweetness %></td>
                        </tr>
                        <% } %>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="../javascript/portal.js"></script>  
</body>
</html>