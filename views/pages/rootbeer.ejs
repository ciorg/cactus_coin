<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); -%>
</head>
<body>
    <div class="pageBody">
        <%- include('../partials/nav_bar'); %>
        <div class="add_rb">
            <form action="/rootbeer" method="post" enctype="multipart/form-data">
                <table>
                    <tr>
                        <td class="rb_label">
                            <label>Brand</label>
                        </td>
                        <td class="rb_input"> 
                            <input type="text" name="rb_brand" required />
                        </td>
                    </tr>
                    <tr>
                        <td class="rb_label">
                            <label>Flavor</label>
                        </td>
                        <td class="rb_input"> 
                            <input type="text" name="rb_flavor" required />
                        </td>
                    </tr>
                    <tr>
                        <td class="rb_label">
                            <label>Sweetness</label>
                        </td>
                        <td class="rb_input"> 
                            <input type="text" name="rb_sweetness" required />
                        </td>
                    </tr>
                    <tr>
                        <td class="rb_label">
                            <label>Bite</label>
                        </td>
                        <td class="rb_input"> 
                            <input type="text" name="rb_bite" required />
                        </td>
                    </tr>
                    <tr>
                        <td class="rb_label">
                            <label>Branding</label>
                        </td>
                        <td class="rb_input"> 
                            <input type="text" name="rb_branding" required />
                        </td>
                    </tr>
                    <tr>
                        <td class="rb_label">
                            <label>Bubble</label>
                        </td>
                        <td class="rb_input"> 
                            <input type="text" name="rb_bubble" required />
                        </td>
                    </tr>
                    <tr>
                        <td class="rb_label">
                            <label>Satisfaction</label>
                        </td>
                        <td class="rb_input"> 
                            <input type="text" name="rb_satisfaction" required />
                        </td>
                    </tr>
                    <tr>
                        <td class="rb_label">
                            <label>Image</label>
                        </td>
                        <td class="rb_input">
                            <input type="file" name="rb_image" id="rb_image" accept=".png, .jpg, .jpeg" />
                        </td>
                    </tr>
                </table>
                <button type="submit" value="rootbeer" class="add_rb_button" required >
                    Add Rootbeer
                </button>
            </form>
        </div>
        <div class="userLogo">
            <img src="imgs/cc_logo.png"/>
        </div>

        <div class="portalBottom">
            <div class="short">
            <img src="imgs/short_landscape.png"/>
            </div>
            <div class="long">
            <img src="imgs/long_landscape.png"/>
            </div>
        </div>
    </div>

    <script>
    </script>
</body>