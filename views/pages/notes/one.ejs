<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../../partials/head'); -%>
        <link rel="stylesheet" type="text/css" href="/css/notes.css">
    </head>

    <body>
        <div class="pageBody">
            <%- include('../../partials/nav_bar'); %>
            <div class="view_note">
                <form action="/note/<%= note._id %>/update" method="post" id="update_note">
                    <input type="text" name="title" id="view_note_title" value="<%- note.title %>"/>
                    <br/>
                    <label for="content">Content:</label>
                    <textarea name="content" form="update_note" id="view_note_content" rows="10" cols="30"><%- note.content %></textarea>
                    <br/>
                    <label for="tags">Tags:</label></br>
                    <input type="text" name="tags" placeholder="Tags" id="view_note_tags" value="<%- note.tags.join(' ') %>"/>
                    <br/>
                    <button type="submit" value="note" class="update_note">
                        Save Changes
                    </button>
                </form> 
            </div>
            <footer>
                <%- include('../../partials/footer'); %>
            </footer>
        </div>
    </body>
</html>