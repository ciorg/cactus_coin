<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/head'); -%>
    <link rel="stylesheet" type="text/css" href="css/rb.css">
    <style>
        .view_ratings {
            width: 90%;
            margin: auto;
            padding-top: 3%;
            background-color: white;
        }

        .view_ratings table {
            margin: auto;
            width: 90%;
        }
    </style>
</head>
<body>
    <div class="pageBody">
        <%- include('../../partials/nav_bar'); %>
        <div class="view_ratings">
            <table>
                <tr>
                    <th>Rootbeer</th>
                    <th>Branding</th>
                    <th>After Taste</th>
                    <th>Aroma</th>
                    <th>Bite</th>
                    <th>Carbonation</th>
                    <th>Flavor</th>
                    <th>Smoothness</th>
                    <th>Sweetness</th>
                    <th>Overall</th>
                    <th>Notes</th>
                    <th>Edit</th>
                    <td>Delete</td>
                </tr>
                <% for (const rating of ratings) { %>
                <tr>
                    <td><%- rating.rb_id %></td>
                    <form action="/ratings/<%= rating._id %>/update" method="post">
                        <td> 
                            <input type="number" name="branding" min="0" max="10" value="<%- rating.branding %>"/>
                        </td>
                        <td class="rb_input"> 
                            <input type="number" name="at" min="0" max="10" value="<%- rating.after_taste %>"/>
                        </td>
                        <td class="rb_input"> 
                            <input type="number" name="aroma" min="0" max="10" value="<%- rating.aroma %>"/>
                        </td>
                        <td class="rb_input"> 
                            <input type="number" name="bite" min="0" max="10" value="<%- rating.bite %>"/>
                        </td>
                        <td class="rb_input"> 
                            <input type="number" name="carb" min="0" max="10" value="<%- rating.carbonation %>"/>
                        </td>
                        <td class="rb_input"> 
                            <input type="number" name="flavor" min="0" max="10" value="<%- rating.flavor %>"/>
                        </td>
                        <td class="rb_input"> 
                            <input type="number" name="smooth" min="0" max="10" value="<%- rating.smoothness %>"/>
                        </td>
                        <td class="rb_input"> 
                            <input type="number" name="sweet" min="0" max="10" value="<%- rating.sweetness %>"/>
                        </td>
                        <td class="rb_input"> 
                            <input type="number" name="overall" min="0" max="10" value="<%- rating.overall %>"/>
                        </td>
                        <td>
                            <textarea name="notes" value=""><%- rating.notes %></textarea>
                        </td>
                        <td>
                            <button type="submit" value="rating" class="rate_button" required >Update</button>
                        </td>
                    </form>
                    <td><a href="/ratings/<%- rating._id %>/delete">Delete</a></td>
                </tr>
                <% } %>
            </table>
        </div>
        <div class="userLogo">
            <img src="imgs/cc_logo.png"/>
        </div>

        <div class="portalBottom">
            <div class="short">
            <img src="imgs/short_landscape.png"/>
            </div>
            <div class="long">
            <img src="imgs/long_landscape.png"/>
            </div>
        </div>
    </div>
</body>